<Window x:Class="Tool.Muse.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MUSE-MEMuchO Client" Height="389.6" Width="475.2">
    <Grid>
        <Button Name="btnStartMuseIO" Content="Start Muse-IO" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="187" Click="BtnStartMuseIO_OnClick"/>
        <ListView Name="lvLog" Margin="0,134,-0.2,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="Auto" Header="Type" DisplayMemberBinding="{Binding Type}"  />
                    <GridViewColumn Width="Auto" Header="Message" DisplayMemberBinding="{Binding Message}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Log:" HorizontalAlignment="Left" Margin="0,104,0,0" VerticalAlignment="Top" Width="54" Height="30"/>
        <Label Content="Receiver:" HorizontalAlignment="Left" Margin="250,7,0,0" VerticalAlignment="Top" Width="54" Height="30"/>
        <Button Content="Start" Name="btnStartReceiver" HorizontalAlignment="Left" Margin="304,10,0,0" VerticalAlignment="Top" Width="75" Click="BtnStartReceiver_OnClick"/>
        <Button Content="Stop" Name="btnStopReceiver" HorizontalAlignment="Left" Margin="384,10,0,0" VerticalAlignment="Top" Width="75" IsEnabled="False" Click="BtnStopReceiver_OnClick" />
    </Grid>
</Window>
